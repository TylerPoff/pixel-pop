        android:text="@string/_5"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/backgroundImageView"
        app:layout_constraintEnd_toEndOf="@id/backgroundImageView"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@id/backgroundImageView"
        app:layout_constraintTop_toBottomOf="@+id/gameIdTV"
        app:layout_constraintVertical_bias="0.079" />

    <ImageView
        android:id="@+id/image5"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/owl"
        app:layout_constraintStart_toEndOf="@+id/animals_pixel_drawing_5_button"
        app:layout_constraintTop_toTopOf="@+id/animals_pixel_drawing_5_button"
        android:layout_marginStart="8dp"
        android:background="@drawable/blur_background"/>

    <TextView
        android:id="@+id/gameIdTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blur_background"
        android:fontFamily="@font/press_start_2p"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:text="@string/game_id"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>
